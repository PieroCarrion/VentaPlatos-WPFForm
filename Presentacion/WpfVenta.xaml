        <TextBox x:Name="txtApellidoT" HorizontalAlignment="Left" Height="23" Margin="552,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DataGrid x:Name="dgClientes" HorizontalAlignment="Left" Height="91" Margin="186,115,0,0" VerticalAlignment="Top" Width="213" SelectionChanged="dgClientes_SelectionChanged" IsReadOnly="True"/>
        <Label x:Name="label_Copy1" Content="DNI cliente :" HorizontalAlignment="Left" Margin="420,113,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.307,-0.346"/>
        <Label x:Name="label1_Copy1" Content="Nombre del Cliente :" HorizontalAlignment="Left" Margin="420,143,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDNI" HorizontalAlignment="Left" Height="23" Margin="500,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"/>
        <TextBox x:Name="txtNombreC" HorizontalAlignment="Left" Height="23" Margin="539,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Seleccionar Cliente: " HorizontalAlignment="Left" Margin="185,94,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1_Copy2" Content="Apellido del Cliente :" HorizontalAlignment="Left" Margin="420,172,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtApellidoC" HorizontalAlignment="Left" Height="23" Margin="539,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Precio_total" HorizontalAlignment="Left" Height="23" Margin="500,265,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="148"/>
        <TextBox x:Name="fecha_actual" HorizontalAlignment="Left" Height="23" Margin="500,232,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="148"/>

    </Grid>
